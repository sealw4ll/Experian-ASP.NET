@{
    ViewData["Title"] = "Customer List";
}

@model List<Customer>

<div class="text-center">
    <h1 class="display-4">Customer List</h1>
    <br />
    <form asp-action="CustomerList" method="get">
        <p>
            <label>Search: <input type="text" name="searchString" /></label>
            <input type="submit" value="Filter" />
        </p>
    </form>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    First Name
                </th>
                <th>
                    Last Name
                </th>
                <th>
                    Email
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var customer in Model)
                {
                    <tr>
                        <td>
                            @customer.Id
                        </td>
                        <td>
                            @customer.FirstName
                        </td>
                        <td>
                            @customer.LastName
                        </td>
                        <td>
                            @customer.Email
                        </td>
                        <td>
                            <form asp-action="CreateEditCustomer" asp-route-id="@customer.Id" method="get" style="display: inline;">
                                <button type="submit" class="btn btn-secondary">Edit</button>
                            </form>
                            <form asp-action="DeleteCustomerInfo" asp-route-id="@customer.Id" method="post" style="display: inline;">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>