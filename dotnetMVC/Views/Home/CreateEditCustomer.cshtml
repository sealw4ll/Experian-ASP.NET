@{
    ViewData["Title"] = "create or edit customers";
}

<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.0/jquery.validate.unobtrusive.min.js"></script>

@model dotnetMVC.Models.Customer

<div class="text-center">
    <h1 class="display-4">Create and Edit Customers</h1>
    @* <a asp-action="CustomerList" class="btn btn-primary">Customer List</a> *@
</div>

<form asp-action="CreateCustomerInfo">
    <input hidden class="form-control" type="number" asp-for="Id"/>

    <div class="form-group">
        <label class="mt-4">First Name</label>
        <input class="form-control" type="text" placeholder="" asp-for="FirstName" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class ="mt-4">Last Name</label>
        <input class="form-control" type="text" placeholder="" asp-for="LastName" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="mt-4">Email</label>
        <input class="form-control" type="text" placeholder="" asp-for="Email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <button class="mt-4 btn btn-primary" type="submit">Submit</button>
</form>